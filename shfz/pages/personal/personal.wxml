<!--pages/personal/personal.wxml-->
<view class="personal">
  <form class="personal_form" bindsubmit="formSubmit">
    <view class="personal_info">
      <view>姓名</view>
      <input type="text" name="truename" value="{{userinfo.truename}}" placeholder='请输入真实姓名' />
    </view>
    <view class="personal_info">
      <view>电话</view>
      <input type="text" name="mobile" value="{{userinfo.mobile}}" placeholder='请输入电话号' />
    </view>
	<view class="personal_info">
	  <view>邮箱</view>
	  <input type="text" name="email" value="{{userinfo.email}}" placeholder='请输入邮箱地址' />
	</view>
    <view class="personal_info">
      <view>地址</view>
      <input type="text" name="address" value="{{userinfo.address}}" placeholder='请输入联系地址' />
    </view>
    <button class="ques_btu" form-type="submit">确认更新</button>
  </form>
</view>