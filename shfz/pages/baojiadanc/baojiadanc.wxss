/* pages/dan/dan.wxss */

.news_list {
  margin: -30px 0;
  /* height: 666px; */
  background: #FFFFFF;
  box-shadow: 0px 13px 35px 0px rgba(155, 155, 155, 0.25);
  border-radius: 15px;
}

.news_title {
	font-size: 20px;
	font-family: Source Han Sans CN;
	font-weight: bold;
	color: #182864;
	padding: 15px 0px 0px 5px;
	width: 35%;
}

.input_seach {
	background: #F7FBFF;
	border: 2px solid #182864;
	border-radius: 5px;
	height: 30px;
	width: 43%;
	float: right;
	margin-right: 20%;
	margin-top: -11%;
}

.news_area {
	width: 100%;
}

.button_go{
	background: #182864;
	border-radius: 5px;
	color: #fff;
	font-size: 14px;
	max-width: 25%;
	float: right;
	margin-top: -11%;
}

.table {
 border: 0px solid darkgray;
 padding: 15px;
 margin-bottom: 10%;
}
.tr {
 border: 1px solid #CFD3DF;
 display: flex;
 width: 100%;
 justify-content: center;
 height: 3rem;
 align-items: center;
}
.td {
 border: 1px solid #CFD3DF;
 width:40%;
 justify-content: center;
 text-align: center;
 display: flex;
 height: 3rem;
 align-items: center;
}
.bg-w{
 background: snow;
}
.bg-g{
 background: #E6F3F9;
}
.th {
 border: 1px solid #CFD3DF;
 width: 40%;
 justify-content: center;
 background: #EAF0F5;
 color: #2B2B2B;
 display: flex;
 height: 3rem;
 align-items: center;
}